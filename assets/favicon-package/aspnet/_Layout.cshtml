<!-- Add this to your _Layout.cshtml -->
@{
    var appName = "My Website";
    var themeColor = "#000000";
    var backgroundColor = "#ffffff";
}

<!-- Basic Favicons -->
<link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" asp-append-version="true">
<link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" asp-append-version="true">
<link rel="icon" type="image/svg+xml" href="~/favicon.svg" asp-append-version="true">
<link rel="shortcut icon" href="~/favicon.ico" asp-append-version="true">

<!-- iOS/macOS Favicons -->
<link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png" asp-append-version="true">
<link rel="mask-icon" href="~/favicon.svg" color="@themeColor" asp-append-version="true">

<!-- Android Favicons -->
<link rel="manifest" href="~/site.webmanifest" asp-append-version="true">
<meta name="theme-color" content="@themeColor">
<meta name="application-name" content="@appName">

<!-- Windows Favicons -->
<meta name="msapplication-TileColor" content="@backgroundColor">
<meta name="msapplication-config" content="~/browserconfig.xml" asp-append-version="true">

<!-- Safari Pinned Tab -->
<meta name="apple-mobile-web-app-title" content="@appName">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="default">

<!-- OpenGraph -->
<meta property="og:image" content="~/favicon-512x512.png" asp-append-version="true">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="512">
<meta property="og:image:height" content="512">